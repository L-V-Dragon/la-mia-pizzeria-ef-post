@model Pizza

<div class="container">
    <form asp-controller="Pizza" asp-action="Update" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>ID:</label>
            <input asp-for="ID" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label>Titolo:</label>
            <input asp-for="Nome" type="text" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label>Path Immagine:</label>
            <input asp-for="Foto" type="text" class="form-control" />
            <span asp-validation-for="Foto" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Descrizione" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Prezzo:</label>
            <textarea asp-for="Prezzo" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
    </form>
</div>
