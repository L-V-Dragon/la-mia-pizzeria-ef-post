@model Pizza

<div class="container">
	<form asp-controller="Pizza" asp-action="Delete" method="post">
		@Html.AntiForgeryToken()
		<div class="mb-3">
			<label>ID:</label>
			<input asp-for="ID" type="text" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label>Titolo:</label>
			<input asp-for="Nome" type="text" class="form-control" disabled/>
		</div>
		<div class="mb-3 form-check">
			<label>Path Immagine:</label>
			<input asp-for="Foto" type="text" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label>Descrizione:</label>
			<input asp-for="Descrizione" rows="10" class="d-block w-100" disabled>
		</div>
		<div class="mb-3">
			<label>Prezzo:</label>
			<input asp-for="Prezzo" rows="10" class="d-block w-100" disabled>
		</div>
		<button type="submit" class="btn btn-primary">Elimina pizza</button>

	</form>
</div>
